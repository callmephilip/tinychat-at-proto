{
  "lexicon": 1,
  "id": "chat.tinychat.actor.defs",
  "defs": {
    "actorView": {
      "type": "object",
      "description": "Chat server actor instance view",
      "required": ["did", "handle", "displayName"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "handle": { "type": "string", "format": "handle" },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64,
          "maxLength": 640
        },
        "description": {
          "type": "string",
          "maxGraphemes": 256,
          "maxLength": 2560
        },
        "avatar": { "type": "string", "format": "uri" }
      }
    }
  }
}
