{
  "lexicon": 1,
  "id": "chat.tinychat.channel",
  "defs": {
    "main": {
      "type": "record",
      "description": "Chat channel that is part of chat server",
      "key": "any",
      "record": {
        "type": "object",
        "required": ["name", "server"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Channel name",
            "maxGraphemes": 64,
            "maxLength": 640
          },
          "server": {
            "type": "string",
            "format": "at-uri",
            "description": "Reference (AT-URI) to the server record (chat.tinychat.server)."
          }
        }
      }
    }
  }
}
