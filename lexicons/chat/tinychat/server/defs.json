{
  "lexicon": 1,
  "id": "chat.tinychat.server.defs",
  "defs": {
    "serverView": {
      "type": "object",
      "description": "Chat server instance view",
      "required": ["uri", "name", "creator"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "name": { "type": "string" },
        "creator": { "type": "string", "format": "did" }
      }
    },
    "channelView": {
      "type": "object",
      "description": "Chat server channel instance view",
      "required": ["uri", "name"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "name": { "type": "string" }
      }
    },
    "actorView": {
      "type": "object",
      "description": "Chat server actor instance view",
      "required": ["did", "handle", "displayName"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "handle": { "type": "string", "format": "handle" },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64,
          "maxLength": 640
        },
        "description": {
          "type": "string",
          "maxGraphemes": 256,
          "maxLength": 2560
        },
        "avatar": { "type": "string", "format": "uri" }
      }
    },
    "messageView": {
      "type": "object",
      "description": "Message view",
      "required": ["uri", "sender", "text", "createdAt"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "server": {
          "type": "string",
          "format": "at-uri"
        },
        "channel": {
          "type": "string",
          "format": "at-uri"
        },
        "sender": { "type": "ref", "ref": "#actorView" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "datetime" }
      }
    }
  }
}
