{
  "lexicon": 1,
  "id": "chat.tinychat.server.defs",
  "defs": {
    "serverView": {
      "type": "object",
      "description": "Chat server instance view",
      "required": ["uri", "name", "creator"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "name": { "type": "string" },
        "creator": { "type": "string", "format": "did" },
        "channels": {
          "type": "array",
          "items": {
            "type": "ref",
            "ref": "#channelView"
          }
        }
      }
    },
    "channelView": {
      "type": "object",
      "description": "Chat server channel instance view",
      "required": ["uri", "name"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "name": { "type": "string" }
      }
    },
    "messageView": {
      "type": "object",
      "description": "Message view",
      "required": ["uri", "sender", "text", "createdAt"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "server": {
          "type": "string",
          "format": "at-uri"
        },
        "channel": {
          "type": "string",
          "format": "at-uri"
        },
        "sender": {
          "type": "ref",
          "ref": "chat.tinychat.actor.defs#actorView"
        },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "datetime" }
      }
    }
  }
}
