{
  "lexicon": 1,
  "id": "chat.tinychat.server.getChannels",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets a list of channels for a given chat server instance.",
      "parameters": {
        "type": "params",
        "required": ["server"],
        "properties": {
          "server": {
            "type": "string",
            "format": "at-uri",
            "description": "Server AT-URI to return channels for."
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["channels"],
          "properties": {
            "channels": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "chat.tinychat.server.defs#channelView"
              }
            }
          }
        }
      }
    }
  }
}
