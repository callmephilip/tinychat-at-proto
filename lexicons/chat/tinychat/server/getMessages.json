{
  "lexicon": 1,
  "id": "chat.tinychat.server.getMessages",
  "defs": {
    "main": {
      "type": "query",
      "description": "Gets a list of of messages for a given channel.",
      "parameters": {
        "type": "params",
        "required": ["channel", "limit"],
        "properties": {
          "channel": {
            "type": "string",
            "format": "at-uri",
            "description": "Channel AT-URI to return messages for."
          },
          "limit": {
            "type": "integer",
            "default": 10,
            "description": "Maximum number of messages to return"
          },
          "cursor": {
            "type": "string",
            "description": "Cursor for pagination. Pagination goes backwards - from more recent messages to older ones"
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["messages"],
          "properties": {
            "messages": {
              "type": "array",
              "items": {
                "type": "ref",
                "ref": "chat.tinychat.server.defs#messageView"
              }
            },
            "cursor": {
              "type": "string",
              "description": "Cursor for pagination"
            }
          }
        }
      }
    }
  }
}
