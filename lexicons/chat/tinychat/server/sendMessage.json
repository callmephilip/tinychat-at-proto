{
  "lexicon": 1,
  "id": "chat.tinychat.server.sendMessage",
  "defs": {
    "main": {
      "type": "procedure",
      "description": "Sends message to specified channel on the specified chat server.",
      "input": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["channel", "server", "text"],
          "properties": {
            "channel": {
              "type": "string",
              "format": "at-uri",
              "description": "Channel AT-URI to return messages for."
            },
            "server": {
              "type": "string",
              "format": "at-uri",
              "description": "Server AT-URI to return messages for."
            },
            "text": {
              "type": "string",
              "description": "Message content."
            }
          }
        }
      },
      "output": {
        "encoding": "application/json",
        "schema": {
          "type": "object",
          "required": ["message"],
          "properties": {
            "message": {
              "type": "ref",
              "ref": "chat.tinychat.server.defs#messageView"
            }
          }
        }
      }
    }
  }
}
